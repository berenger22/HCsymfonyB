{% extends 'base.html.twig' %}

{% block title %}Harry Codeur{% endblock %}

{% block monTitre %}Harry codeur{% endblock %}
{% block sousTitre %}Les requetes de la mort{% endblock %}
{% block body %}
{% if error %}
<div class="alert alert-danger">
    {{ error.messageKey | trans(error.messagedata, 'security')}}
</div>
{% endif %}
{% for message in app.flashes('success') %}
<div class="alert alert-success">
    {{message}}
</div>
{% endfor %}
<form action="" method="POST">
<div class="form-group">
    <label>Votre identifiant :</label>
    <input type="text" required name="_username" class="form-control">
</div>
<div class="form-group">
    <label>Votre mot de passe :</label>
    <input type="password" required name="_password" class="form-control">
</div>
<div class="form-group"> 
{% if not app.user %}
<input type="submit" class="btn btn-primary m-3" value="Se connecter">
<a href="{{path('inscription')}}" class="btn btn-warning m-3">Inscription</a>
{% else %}
<a href="{{path('logout')}}" class="btn btn-danger m-3">DÃ©connexion</a>
<a href="{{path('logout')}}" class="btn btn-secondary m-3">Modifier profil</a>
<a href="" class="btn btn-success m-3">Jouer</a>
{% endif %}
{% if is_granted ('ROLE_ADMIN') %}
<a href="" class="btn btn-info m-3">Question</a>
{% endif %}
</div>
</form>
{% endblock %}
