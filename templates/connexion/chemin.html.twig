{% extends 'base1.html.twig' %}

{% block title %}Harry Codeur
{% endblock %}

{% block monTitre %}Harry codeur
{% endblock %}
{% block sousTitre %}Tu es pret au combat
	{{app.user.username}}
{% endblock %}
{% block body %}
	<div class="row justify-content-md-center">
		<a href="{{path('maraudeur')}}" class="btn btn-success m-5">Jouer</a>
		{% if (is_granted ('ROLE_ADMIN')) and (is_granted ('ROLE_SUPER_ADMIN') == false) %}
			<a href="{{path('app_editP', {'id' : app.user.id})}}" class="btn btn-secondary m-5">Modifier votre profil</a>
		{% elseif (is_granted ('ROLE_USER')) and (is_granted ('ROLE_SUPER_ADMIN') == false) and (is_granted ('ROLE_ADMIN') == false) %}
			<a href="{{path('app_editJ', {'id' : app.user.id})}}" class="btn btn-secondary m-5">Modifier votre profil</a>
		{% elseif is_granted ('ROLE_SUPER_ADMIN') %}
			<a href="{{path('app_editS', {'id' : app.user.id})}}" class="btn btn-secondary m-5">Modifier votre profil</a>
		{% endif %}
		{% if (is_granted ('ROLE_ADMIN')) and (is_granted ('ROLE_SUPER_ADMIN') == false) %}
			<a href="{{path('app_profil')}}" class="btn btn-secondary m-5">Mes questions</a>
		{% endif %}
		{% if is_granted ('ROLE_SUPER_ADMIN') %}
			<a href="{{path('inscription_prof')}}" class="btn btn-secondary m-5">Ajouter un prof</a>
			<a href="{{path('app_domaine')}}" class="btn btn-secondary m-5">Ajouter un domaine</a>
			<a href="{{path('consulteBDD')}}" class="btn btn-secondary m-5">Consulter la BDD</a>
		{% endif %}
		{% if (is_granted ('ROLE_ADMIN')) and (is_granted ('ROLE_SUPER_ADMIN') == false) %}
			<a class="btn btn-info m-5" onclick="cheminP()">
				<i class="far fa-question-circle"> Besoin d'aide?</i>
			</a>
		{% elseif (is_granted ('ROLE_USER')) and (is_granted ('ROLE_SUPER_ADMIN') == false) and (is_granted ('ROLE_ADMIN') == false) %}
			<a class="btn btn-info m-5" onclick="cheminJ()">
				<i class="far fa-question-circle"> Besoin d'aide?</i>
			</a>
		{% endif %}
		<a href="{{path('logout')}}" class="btn btn-danger m-5">Déconnexion</a>
	</div>
{% endblock %}
{% block javascripts %}
<script>
		function cheminJ() {
var $popupHolder = $('#popups');
var index = $popupHolder.children().length;
var newPopup = $popupHolder.data('prototype');
newPopup = newPopup.replace(/__id__/g, 'popup_' + index);
newPopup = newPopup.replace(/__title__/g, 'La navigation?');
newPopup = newPopup.replace(/__content__/g, "A quoi servent tous ces boutons?<br> \
\"Jouer\" vous permet de lancer un combat contre un professeur aléatoire.<br> \
\"Modifier votre profil\" permet d'accéder à la page de modification de vos informations personnelles.");
newPopup = newPopup.replace(/__type__/g, 'secondary');
$popupHolder.append(newPopup);
$('#popup_' + index + '_button').addClass("d-none");
$('#popup_' + index + '_button').click();
};
		function cheminP() {
var $popupHolder = $('#popups');
var index = $popupHolder.children().length;
var newPopup = $popupHolder.data('prototype');
newPopup = newPopup.replace(/__id__/g, 'popup_' + index);
newPopup = newPopup.replace(/__title__/g, 'La navigation?');
newPopup = newPopup.replace(/__content__/g, "A quoi servent tous ces boutons?<br> \
\"Jouer\" vous permet de lancer un combat contre un professeur aléatoire.<br> \
\"Modifier votre profil\"  vous permet d'accéder à la page de modification de vos informations personnelles.<br> \
\"Mes questions\" Vous permet d'accéder à votre page profil qui liste toutes vos questions déjà créer et donne accès à la page de création de questions. <br>");
newPopup = newPopup.replace(/__type__/g, 'secondary');
$popupHolder.append(newPopup);
$('#popup_' + index + '_button').addClass("d-none");
$('#popup_' + index + '_button').click();
};
</script>
{% endblock %}
